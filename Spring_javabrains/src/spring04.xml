<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangle" class="com.rudra.spring04.Triangle">
		<property name="points" >
			<list>
				<ref bean="Point1" />	
				<ref bean="Point2" />	
				<ref bean="Point3" />	
				<ref bean="Point4" />	
			</list>
		</property>
	</bean>
		
	<bean id="Point1" class="com.rudra.spring04.Point">
		<property name="x" value="0"></property>		
		<property name="y" value="0"></property>			
	</bean>
	
	<bean id="Point2" class="com.rudra.spring04.Point">
		<property name="x" value="10"></property>		
		<property name="y" value="-5"></property>			
	</bean>
	
	<bean id="Point3" class="com.rudra.spring04.Point">
		<property name="x" value="15"></property>		
		<property name="y" value="3"></property>			
	</bean>
	
	<bean id="Point4" class="com.rudra.spring04.Point">
		<property name="x" value="-10"></property>		
		<property name="y" value="-5"></property>			
	</bean>
		
</beans>
